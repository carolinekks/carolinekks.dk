        createSparkle();
      }

      function cleanupResources() {
          const existingWindows = document.querySelectorAll('.window.about-me, .window.socials, .window.gallery, .window.changelog');
          existingWindows.forEach(window => {
              if (!window.parentElement) {
                  const observers = window._observers || [];
                  observers.forEach(observer => observer.disconnect());
              }
          });
      }

      function setupWindowCleanup(windowElement) {
          const closeBtn = windowElement.querySelector('button');
          const originalClickHandler = closeBtn.onclick;
          
          closeBtn.onclick = function(e) {
              cleanupResources();
              if (originalClickHandler) {
                  originalClickHandler.call(this, e);
              }
          };
      }
